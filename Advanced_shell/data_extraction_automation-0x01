#!/usr/bin/env bash
# Extract and format Pok√©mon data using jq, awk, and sed

name=$(jq -r '.name' data.json | sed 's/\b[a-z]/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/\b[a-z]/\u&/')
weight=$(jq -r '.weight' data.json)
height=$(jq -r '.height' data.json)

formatted_weight=$(awk -v w="$weight" 'BEGIN {printf "%.1f", w/10}')
formatted_height=$(awk -v h="$height" 'BEGIN {printf "%.1f", h/10}')

echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
